{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": ["--no-color"],
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "args": ["default"],
            "isBuildCommand": true,
            "isWatching": false,
            "problemMatcher": [
                "$jshint"
            ]
        },
        {
            "taskName": "run-unit-tests",
            "args": ["default"],
            "isTestCommand": true,
            "isBuildCommand" : false
        }
    ]
}
